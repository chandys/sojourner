<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:background="#FFFFFF">
  <TextView android:id="@+id/txt_direction2" android:layout_width="fill_parent"
 
   android:text="@string/hello" android:textSize="24sp"
 
   android:layout_margin="15dp" android:layout_height="wrap_content"/>
 
  <TextView android:id="@+id/txt_info2" android:layout_width="fill_parent"
 
   android:text="@string/hello" android:textSize="14sp"
 
   android:layout_margin="15dp" android:layout_height="wrap_content"/>
<com.saviorsoft.Rose android:id="@+id/rose2" 
android:layout_width="wrap_content" 
android:layout_height="wrap_content" 
android:src="@drawable/compass_rose" 
android:layout_marginTop="10sp" 
android:layout_gravity="center">
</com.saviorsoft.Rose>

</LinearLayout>
